generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ComicBook {
  id Int @id @default(autoincrement())
  bookName String
  authorNme String
  description String
  price Int
  discount Decimal? @db.Decimal(5, 2) @default("0.00")
  isUsed Boolean @default(false)
}